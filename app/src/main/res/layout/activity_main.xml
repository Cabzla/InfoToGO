<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityIce4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton_ice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBF9F9"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/ice42" />

            <ImageButton
                android:id="@+id/imageButton_ice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBF9F9"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ice31" />

            <ImageButton
                android:id="@+id/imageButton_ice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBF9F9"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ice11" />

            <ImageButton
                android:id="@+id/imageButton_rzw"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FBF9F9"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/rzw11" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>